package com.bedrockframework.engine.manager{	import com.bedrockframework.core.base.StaticWidget;	import com.bedrockframework.plugin.loader.VisualLoader;	import com.bedrockframework.engine.manager.ContainerManager;		import flash.display.DisplayObjectContainer;	import flash.display.MovieClip;	import flash.display.Sprite;	public class LayoutManager extends StaticWidget	{		public static function initialize()		{		}		public static function buildLayout($layout:Array):void		{			for (var i = 0; i < $layout.length; i++) {				LayoutManager.buildContainer($layout[i]);			}		}		public static function buildContainer($properties:Object):void		{			var strName:String =$properties.name;			var objView:DisplayObjectContainer = $properties.view || new VisualLoader();			delete $properties.name;			delete $properties.view;			ContainerManager.buildContainer(strName, objView, $properties);		}	}}